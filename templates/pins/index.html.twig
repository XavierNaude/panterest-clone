{% extends 'base.html.twig' %}

{% block title "Pinterest | Acceuil" %}

{% block body %}

    <h1>{{ pluralize(pins|length, 'Pin') }} </h1>

    <section>

        {% for pin in pins %}
            <article>
                <h2><a href="{{ path('app_pins_show', {id: pin.id}) }}">{{ pin.title }}</a></h2>
                <p>{{ pin.description|u.truncate(15, '.....', false)  }}</p>
                <p>Cr√©e {{ pin.createdAt|ago(locale='fr') }}</p>
            </article>
        {% endfor %}

    </section>
{% endblock %}
