{% extends 'layouts/base.html.twig' %}

{% block title 'Profil | Pantarest' %}

{% block body %}

<div class="row">
    <div class="col-md-6 mx-auto text-center">
        <h1 class="my-5">Profil</h1>

        <img class="rounded-circle shadow" src="{{ app.user.getGravatarUrl  }}" alt="Avatar de {{ app.user.fullName }}">

        <p class="mt-5 lead">{{ app.user.email }}</p>
        <p class="h2">{{ app.user.fullName }}</p>

        <small>⏰ Compte crée le {{ app.user.createdAt|date('d/m/Y') }}</small>

        <p class="mt-3">
            <a href="{{ path('app_account_edit') }}">Editer le compte</a>
            |
            <a href="{{ path('app_account_change_password') }}">Modifier le mot de passe</a>
        </p>
        
    </div>
</div>


{% endblock %}

